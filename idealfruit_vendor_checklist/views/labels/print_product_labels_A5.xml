<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="report_line_label" model="ir.actions.report">
            <field name="name">Delivery Slip</field>
            <field name="model">purchase.order</field>
            <field name="binding_model_id" ref="model_purchase_order"/>
            <field name="report_type">qweb-pdf</field>
            <field name="report_file">'Delivery Slip - %s - %s' % (object.partner_id.name or '', object.name)</field>
            <field name="report_name">idealfruit_vendor_checklist.report_line_label_document</field>
        </record>

<!--        <report id="report_line_label"-->
<!--                string="Etiqueta pallets"-->
