<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="idealfruit_vendor_checklist.report_purchase_line_label">
            <t t-name="idealfruit_vendor_checklist.report_purchase_line_label">

                <div class="page" style="margin:5px;page-break-before: always;">
                    <div style="width:100%;font-size:3em;margin-top:30px;">
                        <div style="display:block;float:left;width:30%;height:80px;">
                            <b>
                                <span>Proveedor:</span>
                            </b>
                        </div>
                        <div style="display:block;float:left;width:70%;height:100px;">
                            <span t-esc="vendor.name"></span>
                        </div>
                        <div style="display:block;float:left;width:30%;clear:both;height:100px;">
                            <b>
                                <span>Pedido:</span>
                            </b>
                        </div>
                        <div style="display:block;float:left;width:70%;height:100px;">
                            <span t-esc="purchase.id"></span>
                        </div>
                        <div style="display:block;float:left;width:30%;clear:both;height:100px;">
                            <b>
                                <span>Producto:</span>
                            </b>
                        </div>
                        <div style="display:block;float:left;width:70%;height:100px;">
                            <span t-esc="product.name"></span>
                        </div>
                        <div style="display:block;float:left;width:30%;clear:both;height:100px;">
                            <b>
                                <span>Unidades:</span>
                            </b>
                        </div>
                        <div style="display:block;float:left;width:70%;height:100px;">
                            <span t-esc="qty"></span>
                        </div>
                    </div>
                    <div class="text-center align-middle">
                        <t t-set="purchase_barcode" t-value="str(purchase.id)"/>
                        <t t-set="purchase_barcode" t-value="str(purchase_barcode) + '/'"/>
                        <t t-set="purchase_barcode" t-value="purchase_barcode + str(line_id)"/>
<!--                        <t t-set="purchase_barcode" t-value="purchase_barcode.zfill(13)"/>-->
                        <div t-out="purchase_barcode" style="width:90%;margin-left:5%;" t-options="{'widget': 'barcode', 'quiet': 0, 'symbology': 'auto', 'img_style': 'overflow: hidden; width: 100%; height: 6.0rem;'}"/>
                        <span t-esc="purchase_barcode" style="width:100%;display:block;text-align:center;font-size:3em;"></span>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
