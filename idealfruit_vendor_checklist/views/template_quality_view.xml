<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_quality_template_form" model="ir.actions.act_window">
        <field name="name">Plantilla de Calidad</field>
        <field name="res_model">template.quality</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_quality_template_form"
              id="menu_action_quality_template_form"
              parent="idealfruit_vendor_checklist.menu_separator_vendor_checklist"
              sequence="5"/>

    <record id="view_quality_template_form" model="ir.ui.view">
        <field name="name">Template Quality Form</field>
        <field name="model">template.quality</field>
        <field name="arch" type="xml">
            <form string="Template Quality">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="template_quality_line_ids">
                            <tree>
                                <field name="name"/>
                                <field name="type"/>
                                <field name="result_value"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    // crea una vista de formulario para el modelo template.quality.line

    <record id="view_quality_template_line_form" model="ir.ui.view">
        <field name="name">Template Quality Line Form</field>
        <field name="model">template.quality.line</field>
        <field name="arch" type="xml">
            <form string="Template Quality Line">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <label string="Valor" for="text_value"/>
                        <field name="text_value" nolabel="1" attrs="{'invisible': [('type', '!=', 'text')]}"/>
                        <field name="percentage_value" nolabel="1" attrs="{'invisible': [('type', '!=', 'percentage')]}"/>
                        <field name="numeric_value" nolabel="1" attrs="{'invisible': [('type', '!=', 'numeric')]}"/>
                        <field name="boolean_value" nolabel="1" attrs="{'invisible': [('type', '!=', 'boolean')]}"/>
                        <field name="date_value" nolabel="1" attrs="{'invisible': [('type', '!=', 'date')]}"/>
                        <field name="datetime_value" nolabel="1" attrs="{'invisible': [('type', '!=', 'datetime')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
