<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_quality_document_form" model="ir.ui.view">
        <field name="name">Template Quality Form</field>
        <field name="model">quality.document</field>
        <field name="arch" type="xml">
            <form string="Quality Document">
                <field name="allowed_product_ids" invisible="1"/>
                <field name="allowed_partner_ids" invisible="1"/>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" attrs="{'invisible':[('name', '=', 'New')]}" force_save="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="datetime" />
                            <field name="purchase_order_id" readonly="1" force_save="1"/>
                            <field name="product_id"/>
                            <field name="res_partner_id"/>
                        </group>
                        <group>
                            <field name="quality_template_id"/>
                            <field name="net_weight"/>
                            <field name="firmness_units"/>
                            <field name="appearance_units"/>
                        </group>
                    </group>
                    <group>
                        <field name="quality_document_line_ids" >

                            <tree editable="bottom" create="false" delete="false">
                                <field name="parameter_id" readonly="1" force_save="1"/>
                                <field name="parameter_type" readonly="1" force_save="1"/>
                                <field name="value"/>
                                <field name="percentage"/>
                                <field name="result"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_quality_document_tree" model="ir.ui.view">
        <field name="name">quality.document.tree</field>
        <field name="model">quality.document</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="datetime" />
                <field name="purchase_order_id"/>
                <field name="product_id"/>
                <field name="res_partner_id"/>
                <field name="quality_template_id"/>
                <field name="net_weight"/>
            </tree>
        </field>
    </record>

    <record id="action_quality_document_form" model="ir.actions.act_window">
        <field name="name">Documento de Calidad</field>
        <field name="res_model">quality.document</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>

    <menuitem action="action_quality_document_form"
              id="menu_action_quality_document_form"
              parent="purchase.menu_procurement_management"
              groups="idealfruit_vendor_checklist.group_quality_manager"
              sequence="10"/>

</odoo>
