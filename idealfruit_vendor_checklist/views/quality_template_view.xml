<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_quality_template_form" model="ir.actions.act_window">
        <field name="name">Plantilla de Calidad</field>
        <field name="res_model">quality.template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_separator_quality"
              name="Calidad"
              parent="purchase.menu_purchase_config"
              sequence="5"/>

    <menuitem action="action_quality_template_form"
              id="menu_action_quality_template_form"
              parent="idealfruit_vendor_checklist.menu_separator_quality"
              groups="idealfruit_vendor_checklist.group_quality_manager"
              sequence="6"/>

    <record id="view_quality_template_form" model="ir.ui.view">
        <field name="name">Template Quality Form</field>
        <field name="model">quality.template</field>
        <field name="arch" type="xml">
            <form string="Template Quality">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="quality_template_line_ids">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle" />
                                <field name="parameter_id"/>
                                <field name="parameter_type"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
