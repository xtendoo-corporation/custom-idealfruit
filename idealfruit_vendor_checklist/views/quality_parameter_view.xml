<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_quality_parameter_form" model="ir.actions.act_window">
        <field name="name">Par√°metro de Calidad</field>
        <field name="res_model">quality.parameter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_quality_parameter_form"
              id="menu_action_quality_parameter_form"
              parent="idealfruit_vendor_checklist.menu_separator_quality"
              groups="idealfruit_vendor_checklist.group_quality_manager"
              sequence="7"/>

    <record id="view_quality_parameter_form" model="ir.ui.view">
        <field name="name">Parameter Quality Form</field>
        <field name="model">quality.parameter</field>
        <field name="arch" type="xml">
            <form string="Parameter Quality">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="quality_parameter_type_id"/>
                        <field name="quality_parameter_qualify_id"/>
                    </group>
                    <group>
                        <field name="quality_parameter_line_ids">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle" />
                                <field name="result"/>
                                <field name="greater_than"/>
                                <field name="less_than"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
